{% set bodyclass = 'page-envoi-offer-achat' %}
{% include '../header.twig' with bodyclass %}

<div class="clearfix wrapper-fullwidth">
    <div class="content-main-title">
        <div class="wrapper">
            <div class="main-title">
                <h2 class="title">Votre projet d’offre</h2>
                <div class="des">Remplissez ce formulaire et nous vous recontacterons sous 4h</div>
                <a href="" class="btn btn-back"><i class="icon-arrow-left"></i>Retour</a>
            </div>

        </div>
    </div>
    <div class="content-envoi">
        <div class="wrapper">
            <div class="envoi-row">
                <div class="envoi-row-left">
                    <div class="vos-coordonnees">
                        <form>
                            <div class="form">
                                <h3 class="title">Vos coordonnées</h3>
                                <div class="inner">
                                    <div class="form__col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="" placeholder="Pierrick">
                                        </div>
                                    </div>
                                    <div class="form__col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="" placeholder="Nom *">
                                        </div>
                                    </div>
                                    <div class="form__col">
                                        <div class="form-group">
                                            <input type="email" class="form-control" id="" placeholder="Email *">
                                        </div>
                                    </div>
                                    <div class="form__col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="" placeholder="Téléphone">
                                        </div>
                                    </div>


                                </div>
                                <h3 class="title">Plus de détails <span class="small-txt">(optionnel)</span></h3>
                                <div class="inner">
                                    <div class="form__col">
                                        <div class="form-group">
                                            <label for="montant">Montant de votre offre  *</label>
                                            <input type="text" class="form-control" id="" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                <div class="inner">
                                    <div class="form__col">
                                        <div class="label-radio">Votre financement  *</div>
                                        <div class="group-radio">
                                            <div class="form-check abc-radio form-check-inline">
                                                <input class="form-check-input" type="radio" name="radio1" id="radio1" value="option1" checked>
                                                <label class="form-check-label" for="radio1">
                                                    Emprunt
                                                </label>
                                            </div>
                                            <div class="form-check abc-radio form-check-inline">
                                                <input class="form-check-input" type="radio" name="radio1" id="radio2" value="option2">
                                                <label class="form-check-label" for="radio2">
                                                    Comptant
                                                </label>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form__col">
                                        <div class="label-radio">Avez-vous visité ce bien ?  *</div>
                                        <div class="group-radio">
                                            <div class="form-check abc-radio form-check-inline">
                                                <input class="form-check-input" type="radio" name="radio2" id="radio21" value="option21" checked>
                                                <label class="form-check-label" for="radio21">
                                                    Oui
                                                </label>
                                            </div>
                                            <div class="form-check abc-radio form-check-inline">
                                                <input class="form-check-input" type="radio" name="radio2" id="radio22" value="option22">
                                                <label class="form-check-label" for="radio22">
                                                    Non
                                                </label>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="approximatif">
                                    <div class="inner">
                                        <div class="form__col">
                                            <div class="form-group">
                                                <label for="montant">Montant approximatif du prêt  *</label>
                                                <input type="text" class="form-control" id="" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form__col">
                                            <div class="label-radio">Avez-vous consulté votre banque ou un courtier ?  *</div>
                                            <div class="group-radio">
                                                <div class="form-check abc-radio form-check-inline">
                                                    <input class="form-check-input" type="radio" name="radio3" id="radio31" value="option31" checked>
                                                    <label class="form-check-label" for="radio31">
                                                        Oui
                                                    </label>
                                                </div>
                                                <div class="form-check abc-radio form-check-inline">
                                                    <input class="form-check-input" type="radio" name="radio3" id="radio32" value="option32">
                                                    <label class="form-check-label" for="radio32">
                                                        Non
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="inner">
                                    <div class="form__col__full">
                                        <div class="form-group">
                                            <textarea class="form-control" id="Message" rows="7" placeholder="Bonjour Pauline,
Je souhaiterais discuter de mon projet d’offre sur ce bien. Pouvez-vous me recontacter ?"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="group-btn">
                        <div class="champs">* Champs obligatoires</div>
                        <button class="btn btn-envoyer">Envoyer mon projet d’offre</button>
                    </div>
                </div>
                <div class="envoi-row-right">
                    <div class="info-booking">
                        <div class="info-booking__top">
                            <a href="" class="link-over"></a>
                            <div class="image">
                                <img src="{{ img_url }}img-booking.jpg" alt="">
                            </div>
                            <div class="content">
                                <div class="price">
                                    <span>702 000 €</span>  (7 201 €/m2)
                                </div>
                                <div class="short-des">Appartement • Paris, 75020 • Cambronne
                                    3 pièces • 70 m2</div>
                            </div>
                        </div>
                        <div class="info-booking__bottom">
                            <div class="info-person">
                                <div class="image">
                                    <img src="{{ img_url }}avatar.jpg" alt="">
                                </div>
                                <div class="des-right">
                                    <div class="publie">Publié par un <span>partenaire EZI-X</span></div>
                                    <div class="name">Farah Falconi</div>
                                    <div class="price-vote">
                                        <div class="price">4,56</div>
                                        {#<div class="vote">#}
                                            {#<div class="star"><i class="icon-star"></i></div>#}
                                            {#<div class="star"><i class="icon-star"></i></div>#}
                                            {#<div class="star"><i class="icon-star"></i></div>#}
                                            {#<div class="star"><i class="icon-star"></i></div>#}
